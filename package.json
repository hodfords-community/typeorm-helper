{
  "name": "@hodfords/typeorm-helper",
  "version": "10.1.1",
  "description": "Simplifies TypeORM usage in NestJS apps",
  "license": "MIT",
  "readmeFilename": "README.md",
  "author": {
    "name": "Dung Nguyen Tien",
    "email": "nguyentiendung.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hodfords-solutions/typeorm-helper"
  },
  "bugs": {
    "url": "https://github.com/hodfords-solutions/typeorm-helper/issues"
  },
  "tags": [
    "orm",
    "typescript",
    "typescript-orm",
    "typeorm-sample",
    "typeorm-example"
  ],
  "devDependencies": {
    "@nestjs/common": "10.4.1",
    "@nestjs/core": "10.4.1",
    "@nestjs/typeorm": "10.0.2",
    "@types/jest": "29.5.12",
    "@types/node": "22.5.0",
    "@typescript-eslint/eslint-plugin": "8.3.0",
    "@typescript-eslint/parser": "8.3.0",
    "cspell": "8.14.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.5",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "lodash": "4.17.21",
    "lint-staged": "15.2.9",
    "pg": "8.12.0",
    "prettier": "3.3.3",
    "reflect-metadata": "0.2.2",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typeorm": "^0.3.20",
    "typescript": "5.5.4"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc --project tsconfig.prod.json && cp package.json dist/package.json",
    "deploy": "npm run build && npm publish dist",
    "typeorm": "./node_modules/.bin/typeorm ",
    "format": "prettier --write \"**/*.ts\"",
    "check": "prettier --check \"**/*.ts\"",
    "test": "jest --passWithNoTests  --testTimeout=450000 ",
    "cspell": "cspell",
    "prepare": "is-ci || husky",
    "lint": "eslint \"libs/**/*.ts\" --fix --max-warnings 0",
    "lint-staged": "lint-staged"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}