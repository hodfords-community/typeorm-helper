{
  "name": "@hodfords/typeorm-helper",
  "version": "10.1.3",
  "description": "Simplifies TypeORM usage in NestJS apps",
  "license": "MIT",
  "readmeFilename": "README.md",
  "author": {
    "name": "Dung Nguyen Tien",
    "email": "nguyentiendung.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hodfords-solutions/typeorm-helper"
  },
  "bugs": {
    "url": "https://github.com/hodfords-solutions/typeorm-helper/issues"
  },
  "tags": [
    "orm",
    "typescript",
    "typescript-orm",
    "typeorm-sample",
    "typeorm-example"
  ],
  "devDependencies": {
    "@hodfords/nestjs-eslint-config": "^10.0.4",
    "@hodfords/nestjs-prettier-config": "^10.0.1",
    "@nestjs/common": "10.4.4",
    "@nestjs/core": "10.4.4",
    "@nestjs/typeorm": "10.0.2",
    "@types/jest": "29.5.13",
    "@types/node": "22.6.1",
    "cspell": "8.14.4",
    "eslint": "9.11.1",
    "husky": "9.1.6",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "lodash": "4.17.21",
    "pg": "8.13.0",
    "prettier": "3.3.3",
    "reflect-metadata": "0.2.2",
    "rimraf": "^6.0.1",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typeorm": "^0.3.20",
    "typescript": "5.6.2"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "ts-node sample/index.ts",
    "build": "tsc",
    "postbuild": "cp package.json dist/lib && cp README.md dist/lib && cp .npmrc dist/lib",
    "deploy": "npm run build && npm publish dist",
    "typeorm": "./node_modules/.bin/typeorm ",
    "format": "prettier --write \"**/*.ts\"",
    "check": "prettier --check \"**/*.ts\"",
    "test": "jest --passWithNoTests  --testTimeout=450000 ",
    "cspell": "cspell",
    "prepare": "is-ci || husky",
    "lint": "eslint \"lib/**/*.ts\" \"sample/**/*.ts\" --fix --max-warnings 0",
    "lint-staged": "lint-staged"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
